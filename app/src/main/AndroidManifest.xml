<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nikith_shetty.qrhunt">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:noHistory="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ScannerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nikith_shetty.qrhunt.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".GeneratorActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nikith_shetty.qrhunt.GeneratorActivity" />
        </activity>
        <activity android:name=".GeneratorActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nikith_shetty.qrhunt.MainActivity" />
        </activity>
        <activity android:name=".HistoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nikith_shetty.qrhunt.GeneratorActivity" />
        </activity>
    </application>

</manifest>