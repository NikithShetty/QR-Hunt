<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.nikith_shetty.qrhunt.BarcodeInputDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your message" />

    <EditText
        android:id="@+id/text_msg"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/to_encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to encrypt the text?"/>

    <TextView
        android:id="@+id/enter_key_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your 4 digit key"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/key_input"
        android:inputType="number"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <Button
        android:id="@+id/startGenBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="GENERATE BARCODE"/>

</LinearLayout>
